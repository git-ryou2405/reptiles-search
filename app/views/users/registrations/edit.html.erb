<div class="container-fluid">
  <h4>Reptiles Farm</h4><br>
  <div class="row justify-content-center">
    <div class="col-11 col-sm-9 col-md-8 col-lg-7 col-xl-6 bgc-333 ">
    
      <% if @edit_mode == "info" %>
        <!-- ユーザー情報の変更 -->
        <%= render "users/shared/user_edit" %>
        
      <% elsif @edit_mode == "pass" %>
        <!-- パスワードの変更 -->
        <%= render 'users/shared/pass_edit' %>
        
      <% elsif @edit_mode == "destroy" %>
        <!-- アカウントの削除 -->
        <%= render "users/shared/delete_acount" %>
        
      <% end %>
      
    </div>
  </div>
</div>
